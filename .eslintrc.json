{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": [
      "**/node_modules",
      "**/dist",
      "*.json"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "printWidth": 120,
          "tabWidth": 2,
          "useTabs": false,
          "semi": true,
          "trailingComma": "es5",
          "htmlWhitespaceSensitivity": "css",
          "endOfLine": "auto"
        }
      ]
    }
  }